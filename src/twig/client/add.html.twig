{% block body %}
    {# Email Subject #}
    {% if client.getIsLead %}
        {{ setSubject("Client Lead Added"|translate) }}
    {% else %}
        {{ setSubject("Client Added"|translate) }}
    {% endif %}

    <div>
        {# Salutation #}
        <p>
            {{ "Dear Sales Team,"|translate }}
        </p>

        {# Content #}
        <p>
            {% if client.getIsLead %}
                {{ "The following Client Lead has been added to your UCRM."|translate }}
            {% else %}
                {{ "The following Client has been added to your UCRM."|translate }}
            {% endif %}
        </p>

        {# Widget: Client #}
        {% include "_partials/client.html.twig" %}

        {# Widget: Map #}
        {% include "_partials/map.html.twig" %}
    </div>
{% endblock %}